{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	{% for message in app.flashes('success') %}
		<div class="alert alert-success text-red-900">
			{{ message }}
		</div>
	{% endfor %}
	<div class="bg-gray-200 border-2 flex flex-row">

		<table class="border-2 border-black">
			<tbody>
				{% for product in products %}
					<tr>
						<td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
							<div class="flex items-center">
								<div class="flex-shrink-0 w-10 h-10">
									<img class="w-full h-full rounded-full" src="{{ asset('uploads/' ~ product.image) }}" alt=""/>
								</div>
								<div class="ml-3">
									<p class="text-gray-900 whitespace-no-wrap">
										{{product.name}}
										stock :
										{% if product.quantity > 1000 %}
											{{product.quantity / 1000 }}
											kg
										{% else %}

											{{product.quantity}}
											g
										{% endif %}
									</p>
									<p class="text-gray-900 whitespace-no-wrap">
										{{product.price}}€/kg

									</p>

								</div>
							</div>
						</td>
						<td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
							<form action="{{path('create_orderline')}}" method="post">
								<input type="hidden" name="id" value="{{product.id}}">
								<input type="number" name="qtt" id="" required="required">
								<select name="mesure" id="" class="w-20">
									<option value="g">G</option>
									<option value="kg">Kg</option>
								</select>
								<button class="h-10 px-5 m-2 text-purple-100 transition-colors duration-150 bg-purple-600 rounded-lg focus:shadow-outline hover:bg-purple-700" type="submit">Ajouter au panier</button>
							</form>
						</td>

					</tr>
				</tbody>
			{% endfor %}
		</table>
		<div class="border-2 border-lime-500 w-4/12">
			<p>Mon panier --  
				{% set price = 0 %}
				{% for orderLine in orderLines %}
				{% set price = price + orderLine.price %}
					
				{% endfor %}
				Total : {{price}}€</p>

			<table>

				{% for productPanier in productsPanier %}
					<tbody>
						<tr>
							<td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
								<div class="flex items-center">
									<div class="flex-shrink-0 w-10 h-10">
										<img class="w-full h-full rounded-full" src="{{ asset('uploads/' ~ productPanier.image) }}" alt=""/>
									</div>
									<div class="ml-3">
										<p class="text-gray-900 whitespace-no-wrap">
											{{productPanier.name}}
											{% for orderLine in orderLines %}
												{% if orderLine.product.id == productPanier.id %}
													{% if orderLine.quantity > 1000 %}
														{{orderLine.quantity / 1000 }}
														kg
													{% else %}

														{{orderLine.quantity}}
														g
													{% endif %}
													<p>{{orderLine.price}}€</p>
													<a href="{{path('delete_orderline', {id: orderLine.id})}}">Supprimer</a>

												{% endif %}

											{% endfor %}
										</p>
									</div>
								</div>
							</td>
						</tr>
					</tbody>


				{% endfor %}
			</table>
			<a href="{{path('valide_order')}}"><button class="h-10 px-5 m-2 text-purple-100 transition-colors duration-150 bg-purple-600 rounded-lg focus:shadow-outline hover:bg-purple-700">Valider mon panier</button></a>

		</div>
	{% endblock %}
