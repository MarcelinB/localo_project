{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

	<form action="{{path('list_farm')}}" method="post">
<div>
		<center><input class="mt-4  bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500"type="text" name="ville" id="" placeholder="Rechercher par ville"></form>
</center>
<center><button class="mt-2 rounded-2xl  bg-lime-600 hover:bg-indigo-700 text-white h-10 w-24">Rechercher</button></center></div>
	<div class="flex flex-wrap relative  min-h-screen p-4 justify-around">
		{% for farm in farms %}
			<div class="w-64 h-128 mb-4">
			<a href="{{ path('stock_farm', {id: farm.id}) }}">
			
			
				<div class="p-1 flex flex-col bg-white rounded-2xl shadow-xl shadow-slate-300/60">

					<img class="aspect-video w-96 rounded-2xl object-cover object-center" src="{{ asset('uploads/' ~ farm.image) }}"/>

					<div class="p-4">
						<small class="text-blue-400 text-xs">{{farm.adress|upper}}</small>
						<small class="text-rose-400 text-xs">{{farm.ville}}</small>
						<h1 class="text-2xl font-medium text-slate-600 pb-2">{{farm.name|upper}}
						</h1>
					</div>


				</div>
		</a>	</div>
		{% endfor %}
	</div>
{% endblock %}
