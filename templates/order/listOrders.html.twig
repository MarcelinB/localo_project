{% extends 'base.html.twig' %}



{% block body %}
<table class="table-auto border-separate w-full">
	<thead>
		<tr>
			<th>Ferme</th>
			<th>Statut</th>
			<th>Date de la commande</th>
			<th>Date de refus de la commmande</th>

		</tr>
	</thead>
	<tbody>

		{% for order in orders %}
			<tr>
				<td class="text-center">
					{{order.farm.name}}
				</td>

				<td class="text-center">
					{{order.state}}
				</td>

				<td class="text-center">
