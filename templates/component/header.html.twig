
<nav class=" shadow bg-gray-800">
	<div class="container px-6 py-4 mx-auto md:flex md:justify-between md:items-center">
		<div class="flex items-center justify-between">
			<div>
				<a class="text-2xl font-bold  transition-colors duration-200 transform text-white 
				lg:text-3xl  hover:text-gray-300" href="/">Localo</a>
			</div>
			{% if is_granted('ROLE_USER') %}

				<!-- Menu Burger -->
				<div class="flex md:hidden">
					<button id="burger" type="button" class=" text-gray-200 hover:text-gray-400 
					focus:outline-none focus:text-gray-400" aria-label="toggle menu">
						<svg viewbox="0 0 24 24" class="w-6 h-6 fill-current">
							<path fill-rule="evenodd" d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 
							6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"></path>
						</svg>
					</button>
				</div>
			</div>

			<!-- Menu -->
			<div class="items-center md:flex" id="mobilNav">
				<div class="flex flex-col md:flex-row md:mx-6">
					<a class="my-1 text-sm font-medium  transition-colors duration-200 transform text-gray-200 
					hover:text-blue-400 md:mx-4 md:my-0" href="/">Accueil</a>
					
					{% if app.user.gotAFarm == false %}
						<a class="my-1 text-sm font-medium  transition-colors duration-200 transform text-gray-200 
					hover:text-blue-400 md:mx-4 md:my-0" href="{{path('recherche_farm')}}">Faire mes courses</a>
					
					{% endif %}
					{% if app.user.gotAFarm == true %}
						<a class="my-1 text-sm font-medium  transition-colors duration-200 transform text-gray-200 
						hover:text-blue-400 md:mx-4 md:my-0" href="{{path('consult_farm')}}">Ma ferme</a>
					{% endif %}

					{% if app.user.gotAFarm == false %}
						<a class="my-1 text-sm font-medium  transition-colors duration-200 transform text-gray-200 
						hover:text-blue-400 md:mx-4 md:my-0" href="{{path('list_orders')}}">Mes commandes</a>

					{% endif %}
					<a class="my-1 text-sm font-medium transition-colors duration-200 transform text-gray-200
					hover:text-blue-400 md:mx-4 md:my-0" href="{{path('app_logout')}}">Deconnexion</a>
				</div>

				
			</div>
		{% endif %}
	</div>
</nav>
{% block javascripts %}
	<script>


		let burger = document.getElementById('burger')
		let mobilNav = document.getElementById('mobilNav')


		burger.addEventListener("click", function(){ 
			if(mobilNav.className.includes("hidden")){
			mobilNav.setAttribute("class", "visible")}
			else {
			mobilNav.setAttribute("class", "hidden")}	
			
		}); 
	
	
	</script>


{% endblock %}
